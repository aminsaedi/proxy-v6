FROM golang:1.21-alpine AS builder

RUN apk add --no-cache git

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-s -w" -o agent cmd/agent/main.go

FROM alpine:latest

RUN apk --no-cache add ca-certificates tinyproxy

WORKDIR /root/

COPY --from=builder /app/agent .

EXPOSE 8080 9090 10000-20000

ENTRYPOINT ["./agent"]